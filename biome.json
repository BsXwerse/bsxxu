{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": { "enabled": true },
	"files": {
		"ignore": [".next/**", "dist/**", ".turbo/**", "node_modules/**"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": { "noExplicitAny": "off" },
			"complexity": { "useLiteralKeys": "off" },
			"a11y": {
				"useButtonType": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
