{
  "name": "bsxxu",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "./scripts/pre-check.sh && turbo run build; pnpm service:down",
    "dev": "./scripts/pre-check.sh && turbo run dev",
    "service:up": "docker-compose -f ./compose.dev.yaml up -d",
    "service:down": "docker-compose -f ./compose.dev.yaml down",
    "service:check": "./scripts/service-check.sh",
    "start": "turbo run start",
    "lint": "biome check ./",
    "lint:fix": "biome check --write ./",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.1",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "husky": "^9.1.6",
    "turbo": "^2.1.2"
  },
  "packageManager": "pnpm@9.2.0"
}
